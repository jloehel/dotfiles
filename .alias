# Beautifying ls command.
alias ls='ls --group-directories-first --time-style=+"%d.%m.%Y %H:%M" --color=auto -F'
alias ll='ls -l --group-directories-first --time-style=+"%d.%m.%Y %H:%M" --color=auto -F'
alias la='ls -la --group-directories-first --time-style=+"%d.%m.%Y %H:%M" --color=auto -F'

# Alias related to cd
alias ..='cd ..'
alias cd..='cd ..'

# Aliases related to cp/mv/rm
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# Alias to find somethin in the home directory
alias ff='find ~/ -name $1'

# Aliases related to kubernetes
alias k=kubectl

# Handy alias for the ip command
alias ip="ip --color"
alias ipb="ip --color --brief"

# Misc
alias random_string="cat /dev/urandom | tr -dc 'a-zA-Z0-9' | fold -w 64 | head -n 1"
alias chwon='chown'
