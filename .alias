# Beautifying ls command.
alias ls='ls --group-directories-first --time-style=+"%d.%m.%Y %H:%M" --color=auto -F'
alias ll='ls -l --group-directories-first --time-style=+"%d.%m.%Y %H:%M" --color=auto -F'
alias la='ls -la --group-directories-first --time-style=+"%d.%m.%Y %H:%M" --color=auto -F'

alias projects="cd ~/projects"
alias Projects="cd ~/projects"
alias projekte="cd ~/projects"
alias Projekte="cd ~/projects"
alias inlyse="cd ~/projects/github.com/inlyse/"
alias infra="cd ~/projects/github.com/inlyse/infra/ansible"

# Aliases related to cp/mv/rm
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# Alias to find somethin in the home directory
alias ff='find ~/ -name $1'

# Aliases related to kubernetes
alias k=kubectl

# Handy alias for the ip command
alias ip="ip --color"
alias ipb="ip --color --brief"
alias eth0="ip a s eth0"
alias wlan0="ip a s wlan0"
alias eth0-4="ipb -4 a s eth0"
alias eth0-6="ipb -6 a s eth0"
alias wlan0-4="ipb -4 a s wlan0"
alias wlan0-6="ipb -6 a s wlan0"

# Misc
alias random_string="cat /dev/urandom | tr -dc 'a-zA-Z0-9' | fold -w 64 | head -n 1"
alias chwon='chown'
alias j='jobs -l'
alias h='history -f 1 | less +G'
alias hh='history'
alias cls='clear'
alias term='echo $TERM'
alias todo="vim ~/.todo"

# Metasploit
alias pattern_create='/usr/share/metasploit-framework/tools/exploit/pattern_create.rb'
alias pattern_offset='/usr/share/metasploit-framework/tools/exploit/pattern_offset.rb'


# Nmap
# Good starting with
alias nmap_simple='sudo nmap -sS -O -Pn -sV -T4 -oX $1.xml $1'
